<% provide(:title, 'Post') %>
<h1>Post</h1>

<%= form_for(@micropost) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :content %>
  <%= f.text_area :content, class: "form-control", :size => "20x10" %>

  <%= f.submit "出品する", class: "btn btn-primary" %>

<% end %>
