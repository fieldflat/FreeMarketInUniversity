<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <!--
        ここに一言メッセージを設けてもいいかもしれない．
      -->

      <%= f.submit "Save changes", class: "btn btn-primary my-3" %>
    <% end %>

    <% if current_user?(@user) %>
      <%= link_to "Delete my account", user_path(@user), method: :delete, data: {confirm: "本当に削除しますか"} %>
    <% end %>
  </div>
</div>
